{{#css '/stylesheets/signup.css'}}{{/css}}
<main>
  <div class="container" id="login">
    <div class="row">
      <div class="login-wrapper col-md-6 col-md-offset-3 ">
        <div class="h2">Welcome Back</div>
        <div class="error">{{error}}</div>
        <div class="form">
          <form action="/login" method="POST" class="loginForm">
            <div class="form-group">
              <div class="role">
                <span>Select your role:</span>
                <input type="radio" name="role" value="clerk"><span>Data Entry Clerk</span>
                <input type="radio" name="role" value="customer" checked><span>Customer</span>
              </div>
            </div>
            <div class="form-group">
              <input type="email" placeholder="Email Address" value="{{email}}" name="email">
            </div>
            <div class="form-group">
              <input type="password" name="pwd" id="pwd" placeholder="Password" value="{{pwd}}" name="pwd">
            </div>
            <div class="form-group">
              <input type="submit" value="Login" class="login_btn">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>
{{>footer}}
{{#js '/javascripts/login.js'}}{{/js}}