<main>
  <div class="container" id="signup">
    <div class="row">
      <div class="login-wrapper col-md-6 col-md-offset-3 ">
        <div class="h2">Sign Up</div>
        <div class="h4">Create your account by entering your email address and choosing a password</div>
        <div class="form">
          <form action="/signup" method="POST">
            <div class="form-group">
              <input type="text" name="firstName" id="firstName" placeholder="First Name" value="{{firstName}}">
              <div class="tips">
                {{#showFirstName}}
                <span>Please enter a valid firstName</span>
                {{/showFirstName}}
              </div>
            </div>
            <div class="form-group">
              <input type="text" name="lastName" id="lastName" placeholder="Last Name" value="{{lastName}}">
              <div class="tips">
                {{#showLastName}}
                <span>Please enter a valid lastName</span>
                {{/showLastName}}
              </div>
            </div>
            <div class="form-group">
              <input type="text" name="email" placeholder="Email Address" value="{{email}}">
              <div class="tips">
                {{#showEmail}}
                <span>Please enter a valid email address</span>
                {{/showEmail}}
                {{#isEmailExist}}
                <span>The email has been registered, please change other one</span>
                {{/isEmailExist}}
              </div>
            </div>
            <div class="form-group">
              <input type="password" name="pwd" id="pwd" placeholder="Password" value="{{pwd}}">
              <div class="tips">
                {{#showPwd}}
                <span>Contains at least one lowercase letter, uppercase letter, number and symbol.</span>
                {{/showPwd}}
              </div>
            </div>
            <div class="form-group">
              <input type="submit" value="Sign up today">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>